<section class="py-8 px-4 xl:px-10">
  <nav class="relative">
    <div class="flex justify-between items-center">
      <%= link_to root_path do %>
        <%= image_tag 'logo-as.png', size:'250x250' %>
      <% end %>
      <div class="lg:hidden">
        <button class="navbar-burger flex items-center p-3 hover:bg-gray-50 rounded">
          <svg class="block h-4 w-4" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
            <title>Mobile menu</title>
            <path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z"></path>
          </svg>
        </button>
      </div>
      <ul class="hidden absolute top-1/2 left-1/2 transform -translate-y-1/2 -translate-x-1/2 lg:flex lg:w-auto lg:space-x-12">
        <li><%= link_to "Inicio", root_path %></li>
        <li><%= link_to "Tienda", products_shop_path%></li>
        <li><% if user_signed_in? %> <!-- Verifica si el usuario ha iniciado sesi贸n -->
          <li><%= link_to "Carrito", carts_show_path%></li>
          <li><%= link_to "Ordenes", orders_path%></li>
          <li><%= link_to "Cerrar sesi贸n", destroy_user_session_path, method: :delete %></li>
          <% if @user && @user.admin?%>
            <li><%= link_to 'Administrador', admin_panel_path %></li>
          <% else %>
            <!-- C贸digo para otros usuarios o cuando @user es nil -->
          <% end %>
        <% else %>
          <%= link_to "Iniciar sesi贸n", new_user_session_path %>
        <% end %></li>
      </ul>
      <div class="hidden lg:flex">

        <%= form_tag search_products_path, method: :get do %>
          <%= text_field_tag :q, params[:q], placeholder:"Nombre del producto", class:"hidden px-4 py-3 lg:inline-block text-sm leading-normal font-medium border border-r-0 rounded-l" %>
          <%= button_tag type:"submit" do %>
            <svg class="text-gray-300 w-4 h-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
          <% end %>
        <% end %>
      </div>
    </div>
  </nav>
</section>