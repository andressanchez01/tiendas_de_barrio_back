<%= form_with model:@product do |f| %>

  <% if @product.errors.any? %>
    <div class="mb-4">
      <% @product.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </div>
  <% end %>

  <div class="mb-4">
    <%= f.text_field :name, placeholder:"Titulo del producto", class:"appearance-none block w-full py-3 px-4  text-gray-700 bg-gry-50 focus:bg-white border border-gray-200 focus:border-gray-500 rounded focus:outline-none" %>
  </div>

  <div class="mb-4">
    <%= f.text_area :description, placeholder:"DescripiciÃ³n del producto", class:"appearance-none block w-full py-3 px-4  text-gray-700 bg-gry-50 focus:bg-white border border-gray-200 focus:border-gray-500 rounded focus:outline-none" %>
  </div>

  <div class="mb-4">
    <%= f.number_field :cost, placeholder:"Valor del producto", class:"appearance-none block w-full py-3 px-4  text-gray-700 bg-gry-50 focus:bg-white border border-gray-200 focus:border-gray-500 rounded focus:outline-none" %>
  </div>

  <div class="mb-4">
    <%= f.number_field :price, placeholder:"Precio del producto", class:"appearance-none block w-full py-3 px-4  text-gray-700 bg-gry-50 focus:bg-white border border-gray-200 focus:border-gray-500 rounded focus:outline-none" %>
  </div>

  <div class="mb-4">
    <%= f.number_field :stock, placeholder:"Unidades del producto", class:"appearance-none block w-full py-3 px-4  text-gray-700 bg-gry-50 focus:bg-white border border-gray-200 focus:border-gray-500 rounded focus:outline-none" %>
  </div>

  <div class="mb-4">
    <%= f.label "Visible" %>
    <%= f.check_box :visible %>
  </div>

  <div class="mb-4">
    <%= f.file_field :image %>
  </div>

  <div class="mb-4">
    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |category| %>
      <%= category.label class:"form-check-label text-lg inline-block text-gray-600" do %>
        <%= category.check_box + category.text %>
      <% end %>
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit "Guardar Cambios", class:"cursor-pointer inline-block  py-4 px-8 leading-none text-white bg-red-600 hover:bg-red-700 font-semibold rounded shadow" %>
  </div>

<% end %>

